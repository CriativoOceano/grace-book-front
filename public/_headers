# Headers de segurança para Netlify
# Este arquivo complementa as configurações do netlify.toml

# Headers para todos os arquivos
/*
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.gstatic.com https://www.google.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api-sandbox.asaas.com https://api.asaas.com https://*.firebaseapp.com https://*.googleapis.com;

# Headers específicos para arquivos JavaScript
/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript

# Headers específicos para arquivos CSS
/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css

# Headers para assets estáticos
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Headers para imagens
/*.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png

/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg

/*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml

/*.ico
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/x-icon
